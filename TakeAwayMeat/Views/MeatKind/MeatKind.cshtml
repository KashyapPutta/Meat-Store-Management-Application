@model TakeAwayMeat.ViewModel.MeatKindViewModel
@{
    ViewBag.Title = "MeatKind";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MeatKind</h2>

@using (Html.BeginForm("SaveMeat", "MeatKind"))
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>MeatId</th>
            <th>Meat Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var eachkind in Model.MeatKindList)
        {
            <tr>
                <td>@eachkind.Id</td>
                <td>@eachkind.MeatName</td>
                <td>@Html.ActionLink("Edit", "GetMeatId", new { id = eachkind.Id }) | @Html.ActionLink("Delete", "DeleteMeatKind", new { id = eachkind.Id }) </td>
            </tr>
            }
    </tbody>
</table>

<div>
    @Html.LabelFor(m => m.MeatKind.MeatName)
    @Html.TextBoxFor(m => m.MeatKind.MeatName, new { @class = "form-control" })
</div>
<button type="submit" class="btn btn-primary">Save</button>

}