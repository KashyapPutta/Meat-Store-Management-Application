@model TakeAwayMeat.ViewModel.MeatKindViewModel
@{
    ViewBag.Title = "EditMeatKind";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditMeatKind", "MeatKind", FormMethod.Post))
{ 
<h2>EditMeatKind</h2>

<div class="form-group">
    @Html.LabelFor(m => m.MeatKind.Id)
    @Html.TextBoxFor(m => m.MeatKind.Id)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MeatKind.MeatName)
    @Html.TextBoxFor(m => m.MeatKind.MeatName)
</div>
<button type="submit" class="btn btn-primary">Save</button>

}
